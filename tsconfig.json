{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2018", "dom"],
    "preserveConstEnums": true
  }
}
